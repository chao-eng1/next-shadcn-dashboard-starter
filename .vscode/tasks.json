{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev All",
      "type": "shell",
      "command": "kill-port 3000 3001 || true && pnpm run dev:all",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "(Starting development server|ready in)",
            "endsPattern": "(compiled|Failed to compile)"
          }
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}